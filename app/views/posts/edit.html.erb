<h1>Edit Post</h1>

<%= form_for @post,{ multipart: true } do |form|  %>
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description,  :required => true%>
  </div>
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, :accept => "image/x-png,image/gif,image/jpeg" ,:required => true%>
  </div>
  <div class="form-group">
    <%= form.text_field :user_id, value: current_user.id, class: 'd-none' %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
